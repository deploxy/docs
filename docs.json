{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Deploxy Docs",
  "description": "Deploxy is a serverless proxy platform for Stdio MCP server, allowing you to publish NPM packages while keeping your source code private.",
  "seo": {
    "title": "Deploxy | Stdio MCP Server to serverless",
    "description": "Deploy Stdio MCP server as NPM packages without exposing your source code. Deploxy provides a secure, scalable, serverless backend for your business logic.",
    "image": "/logo/deploxy_logo_text.png"
  },
  "theme": "maple",
  "colors": {
    "primary": "#171717",
    "light": "#FAFAFA",
    "dark": "#0A0A0A"
  },
  "favicon": "/favicon.png",
  "icons": {
    "library": "lucide"
  },
  "navigation": {
    "groups": [
      {
        "group": "Getting Started",
        "pages": [
          "index",
          "getting-started/quickstart-clone",
          "getting-started/quickstart-existing",
          "getting-started/core-concepts"
        ]
      },
      {
        "group": "Guides",
        "pages": ["guides/configuration", "guides/troubleshooting", "guides/monitoring"]
      },
      {
        "group": "Resources",
        "pages": ["resources/pricing", "resources/regions", "resources/cli-reference"]
      }
    ]
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity"]
  },
  "logo": {
    "light": "/logo/logo_text_hr_light.png",
    "dark": "/logo/logo_text_hr_dark.png",
    "href": "https://www.deploxy.com"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Go to Dashboard",
      "href": "https://www.deploxy.com/dashboard"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/deploxy"
    }
  },
  "errors": {
    "404": {
      "redirect": false
    }
  }
}
