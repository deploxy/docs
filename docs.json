  "logo": {
    "light": "/logo/logo_text_light.svg",
    "dark": "/logo/logo_text_dark.svg",
    "href": "https://www.deploxy.com"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Go to Dashboard",
      "href": "https://www.deploxy.com/dashboard"
