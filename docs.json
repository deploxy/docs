{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Deploxy",
  "colors": {
    "primary": "#171717",
    "light": "#FAFAFA",
    "dark": "#0A0A0A"
  },
  "favicon": "/favicon.png",
  "navigation": {
    "groups": [
      {
        "group": "Introduction",
        "pages": ["index"]
      },
      {
        "group": "Getting Started",
        "pages": ["getting-started/introduction", "getting-started/installation", "getting-started/first-deployment"]
      },
      {
        "group": "Guides",
        "pages": [
          "guides/authentication",
          "guides/environments",
          "guides/monitoring",
          "guides/troubleshooting",
          "guides/configuration"
        ]
      },
      {
        "group": "API",
        "pages": ["api/overview", "api/cli-commands"]
      }
    ]
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity"]
