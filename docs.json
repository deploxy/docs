{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Deploxy Docs",
  "description": "Deploxy is a serverless proxy deployment platform for STDIO applications, allowing you to publish NPM packages while keeping your source code private. Ideal for protecting proprietary logic in AI models, data processors, and MCP servers.",
  "seo": {
    "title": "Deploxy | Secure Serverless Deployment for Private Code",
    "description": "Deploy private MCP servers and STDIO applications as NPM packages without exposing your source code. Deploxy provides a secure, scalable, serverless backend for your business logic.",
    "image": "/logo/deploxy_logo_text.png"
  },
  "theme": "maple",
  "colors": {
    "primary": "#171717",
    "light": "#FAFAFA",
    "dark": "#0A0A0A"
  },
  "favicon": "/favicon.png",
  "icons": {
    "library": "lucide"
  },
  "navigation": {
    "groups": [
      {
        "group": "Getting Started",
        "pages": [
          "index",
          "getting-started/quickstart-clone",
          "getting-started/quickstart-existing",
          "getting-started/core-concepts"
        ]
      },
      {
        "group": "Guides",
        "pages": [
          "guides/environments",
          "guides/troubleshooting",
          "guides/monitoring",
          "guides/authentication",
          "guides/configuration"
        ]
      },
      {
        "group": "Resources",
        "pages": ["resources/pricing", "resources/regions", "resources/cli-commands"]
      }
    ]
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity"]
  },
  "logo": {
    "light": "/logo/deploxy_logo_text.png",
    "dark": "/logo/deploxy_logo_text.png",
    "href": "https://www.deploxy.com"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Go to Dashboard",
      "href": "https://www.deploxy.com/dashboard"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/deploxy"
    }
  },
  "errors": {
    "404": {
      "redirect": false
    }
  }
}
